[Unit]
Description=Chromium Kiosk
Wants=graphical.target
After=graphical.target

[Service]
Environment=DISPLAY=:0.0
Environment=XAUTHORITY=/home/kcckiosk/.Xauthority
Type=simple
ExecStart=/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/garjones/pi-kiosk/main/kiosk.run.sh)"
Restart=on-abort
User=kcckiosk
Group=kcckiosk

[Install]
WantedBy=graphical.target
